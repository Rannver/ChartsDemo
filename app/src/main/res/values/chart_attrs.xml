<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LinesChartView">
        <!--x,y轴颜色-->
        <attr name="xylinecolor" format="color"/>
        <!--x,y轴粗细-->
        <attr name="xylinewidth" format="dimension"/>
        <!--折线颜色-->
        <attr name="linecolor" format="color"/>
        <!--表格背景颜色-->
        <attr name="backroundcolor" format="color"/>
        <!--是否允许滑动-->
        <attr name="scrollable" format="boolean"/>
        <!--坐标点颜色-->
        <attr name="pointcolor" format="color"/>
        <!--填充区域颜色-->
        <attr name="fillcolor" format="color"/>
        <!--坐标轴文字大小-->
        <attr name="xytextsize" format="dimension"/>
        <!--坐标轴文字颜色-->
        <attr name="xytextcolor" format="color"/>
        <!--刻度长度-->
        <attr name="xyscalelength" format="dimension"/>
        <!--阈值设置-->
        <attr name="threshold" format="float"/>
        <!--是否显示阈值线-->
        <attr name="thresholdlineshow" format="boolean"/>
        <!--是否显示折线注释-->
        <attr name="islinehintshow" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PieChartView">
        <!--饼图形式-->
        <attr name="pietype" format="integer" >
            <enum name="SOILD" value="0"/>
            <enum name="HOLLOW" value="1"/>
        </attr>
        <!--饼图标题-->
        <attr name="title" format="string"/>
        <!--标题位置-->
        <attr name="titleIndex" format="integer">
            <enum name="TOP" value="0"/>
            <enum name="BOTTOM" value="1"/>
            <enum name="CENTER" value="2"/>
        </attr>
    </declare-styleable>

</resources>